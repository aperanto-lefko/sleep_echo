<Window x:Class="sleepApp.GraphWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        Title="Графики" Height="420" Width="625" ResizeMode="CanResize">
    <Window.Resources>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Foreground" Value="#FFFFFFFF"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="Border" 
              Background="{TemplateBinding Background}" 
              BorderBrush="{TemplateBinding BorderBrush}" 
              BorderThickness="{TemplateBinding BorderThickness}" 
              CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Триггер при наведении -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3E7AC5"/>
                                <!-- Темнее основной цвет -->
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!--Background="#2D2D2D" -->
    <Window.Background>
        <ImageBrush ImageSource="pack://application:,,,/Resources/axiom.png" Stretch="UniformToFill"/>
    </Window.Background>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Center" Margin="10">
            <ComboBox x:Name="XAxisCombobox" Width="150" Margin="5" SelectionChanged="UpdateGraph"/>
            <ComboBox x:Name="YAxisCombobox" Width="150" Margin="5" SelectionChanged="UpdateGraph"/>
            <Button Content="Построить график" Click="UpdateGraph" Margin="5"/>
        </StackPanel>
        <!-- График -->
        <lvc:CartesianChart x:Name="DataChart" Grid.Row="1" LegendLocation="Right">
            
            <!-- 
        CartesianChart - это элемент управления из библиотеки LiveCharts, который отображает двумерные графики.
        LegendLocation="Right" - размещает легенду графика справа.
    -->
            <lvc:CartesianChart.Series>
                <lvc:LineSeries Title="График"
                                Values="{Binding DataValues}"
                                PointGeometrySize="5"
                                StrokeThickness="2"  />
            </lvc:CartesianChart.Series>

            <!-- 
            LineSeries - представляет собой линейный график.
            Title="График" - заголовок серии, который отображается в легенде.
            Values="{Binding DataValues}" - привязка к данным (DataValues), которые будут отображаться на графике.
            PointGeometrySize="5" - размер точек на графике.
            StrokeThickness="2" - толщина линии графика.
        -->

            <lvc:CartesianChart.AxisX>
                <lvc:Axis Title="Параметр X" />
            </lvc:CartesianChart.AxisX>
            <!-- 
            AxisX - настройки для оси X (горизонтальной оси).
        -->
            <lvc:CartesianChart.AxisY>
                <lvc:Axis Title="Параметр Y" />
            </lvc:CartesianChart.AxisY>

        </lvc:CartesianChart>
    </Grid>
</Window>
